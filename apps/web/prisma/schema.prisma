// Schéma de base de données Floo (PostgreSQL / Supabase)
// Tables: users, transactions, sessions — sans RLS

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Utilisateur de l'application web
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String    // Hash bcrypt

  // Code unique pour WhatsApp
  code          String    @unique

  // WhatsApp
  phoneNumber   String?   @unique
  whatsappLinked Boolean  @default(false)

  // Crédits
  credits       Int       @default(50) // Bonus de bienvenue

  // Onboarding
  onboarded     Boolean   @default(false)
  onboardingData Json?    // Réponses aux 3 questions (JSON)

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastActivity  DateTime?

  // Relations
  transactions   Transaction[]
  sessions       Session[]
  integrations   Integration[]

  @@map("users")
}

// Intégrations OAuth (Google, Outlook, etc.)
model Integration {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider    String   // "google" | "outlook" | "apple"
  scope       String   // "gmail,calendar" | "mail" etc.
  accessToken String   // Chiffré ou en clair (à sécuriser en prod)
  refreshToken String?
  expiresAt   DateTime?

  metadata    Json?    // Données additionnelles (email lié, etc.)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, provider])
  @@map("integrations")
  @@index([userId])
}

enum TransactionType {
  CREDIT
  DEBIT
  BONUS
  REFUND
}

// Transactions de crédits
model Transaction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  type        TransactionType
  amount      Int      // Nombre de crédits
  balance     Int      // Solde après la transaction

  // Détails
  description String?
  metadata    Json?    // Info additionnelle (JSON)

  // Payment (pour les achats)
  paymentMethod String? // "wave" | "orange_money" | "bonus"
  paymentId   String?  // ID de la transaction de paiement

  createdAt   DateTime @default(now())

  @@map("transactions")
  @@index([userId])
}

// Sessions WhatsApp (historique des conversations)
model Session {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // WhatsApp
  phoneNumber String

  // Conversation
  messages    Json     // Array of messages (JSON)
  creditsUsed Int      @default(0)

  // Status
  active      Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("sessions")
  @@index([userId])
  @@index([phoneNumber])
}

// Interactions pour collecte de données d'entraînement
model Interaction {
  id          String   @id @default(cuid())

  // Contexte utilisateur
  userId      String?
  phoneNumber String?
  sessionId   String?

  // Type d'interaction
  messageType String   // "user" | "assistant" | "tool_call" | "tool_result" | "error"

  // Contenu
  content     String?  @db.Text

  // Outils
  toolName    String?
  toolInput   String?  @db.Text // JSON
  toolOutput  String?  @db.Text // JSON

  // Métadonnées LLM
  model       String?
  tokensUsed  Int?
  latencyMs   Int?

  // Résultat
  success     Boolean  @default(true)
  errorMessage String? @db.Text

  // Données additionnelles
  metadata    String?  @db.Text // JSON

  createdAt   DateTime @default(now())

  @@map("interactions")
  @@index([userId])
  @@index([phoneNumber])
  @@index([messageType])
  @@index([toolName])
  @@index([createdAt])
}

// Notes utilisateur (mémoire persistante)
model Note {
  id          String   @id @default(cuid())
  userId      String?
  phoneNumber String?

  title       String?
  content     String   @db.Text
  tags        String?  // Comma-separated tags

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("notes")
  @@index([userId])
  @@index([phoneNumber])
}

// Rappels utilisateur
model Reminder {
  id          String   @id @default(cuid())
  userId      String?
  phoneNumber String?

  message     String
  remindAt    DateTime
  sent        Boolean  @default(false)

  createdAt   DateTime @default(now())

  @@map("reminders")
  @@index([userId])
  @@index([phoneNumber])
  @@index([remindAt])
  @@index([sent])
}
